<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.asignarInternet.InternetActivity">

    <LinearLayout
        android:id="@+id/lLayoutTipoInt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblTipoInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Equipo"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_label_med" />

        <Spinner
            android:id="@+id/spTipoInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lLayoutPlanInt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lLayoutTipoInt">

        <TextView
            android:id="@+id/lblPlanInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plan"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_label_med" />

        <Spinner
            android:id="@+id/spPlanInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lLayoutInternte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lLayoutPlanInt"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/linearLayout11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

            <TextView
                android:id="@+id/lblPrecioInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="@dimen/padding_min"
                android:text="Precio Instalacion"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_label_med" />


            <TextView
                android:id="@+id/tvPrecioInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="@dimen/padding_min"
                android:text=""
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_label_med" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lLayoutMensInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13">


            <TextView
                android:id="@+id/lblMensInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="@dimen/padding_min"
                android:text="Mensualidad del Plan"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_label_med" />

            <TextView
                android:id="@+id/tvMensInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="@dimen/padding_min"
                android:text=""
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_label_med" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lLayoutMensSinInt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout13">


            <TextView
                android:id="@+id/lblMensSinInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="right"
                android:paddingRight="@dimen/padding_min"
                android:text="Mensualidad Actual"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_label_med" />

            <TextView
                android:id="@+id/tvMensSinInt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:paddingLeft="@dimen/padding_min"
                android:text=""
                android:textColor="@color/primary_text"
                android:textSize="@dimen/text_label_med" />


        </LinearLayout>



    </LinearLayout>

    <ProgressBar
        android:id="@+id/pBarInternet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="gone"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>