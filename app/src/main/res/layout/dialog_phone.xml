<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="3dp"
    android:layout_margin="10dp">

    <TextView
        android:id="@+id/textView14"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telefonos Disponibles"
        android:textAlignment="center"
        android:layout_margin="2dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnTelefono1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:visibility="gone"
        android:layout_marginVertical="5dp"
        android:textSize="@dimen/text_label_med"
        android:background="@drawable/back_submenu"/>

    <Button
        android:id="@+id/btnTelefono2"
        android:background="@drawable/back_submenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginVertical="5dp"
        android:textSize="@dimen/text_label_med"
        android:text="0" />


    <Button
        android:id="@+id/btnAddTelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:textSize="@dimen/text_label_med"
        android:text="Agregar o editar numero"
        android:elevation="2dp"
        />

</LinearLayout>